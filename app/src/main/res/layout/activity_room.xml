<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F8F8F8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/roomToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:title="Laundry Room"
        android:titleTextColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="669dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Filter Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/buttonFilterAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="All"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:backgroundTint="#6200EE" />

            <Button
                android:id="@+id/buttonFilterRunning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Running"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:backgroundTint="#757575" />

            <Button
                android:id="@+id/buttonFilterIdle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Free"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:backgroundTint="#757575" />

            <Button
                android:id="@+id/buttonFilterFinished"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Finished"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:backgroundTint="#757575" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMachines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <TextView
            android:id="@+id/textNoReservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:text="No reservations"
            android:textAlignment="center"
            android:textColor="#555555"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
