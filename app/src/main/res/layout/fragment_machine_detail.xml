<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-12dp"
            android:layout_marginEnd="-12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#757575" />
        <TextView
            android:id="@+id/popup_machine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/btn_close"
            android:text="Machine Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popup_cycle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_machine_name"
            android:layout_marginTop="8dp"
            android:text="Loading cycle..." />

        <TextView
            android:id="@+id/popup_telemetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_cycle_time"
            android:layout_marginTop="16dp"
            android:background="#F0F0F0"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:text="Waiting for live data..." />

    </RelativeLayout>
</androidx.cardview.widget.CardView>